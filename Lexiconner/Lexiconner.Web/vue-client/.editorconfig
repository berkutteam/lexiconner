# This is a configuration file for EditorConfig
# Brief overview: EditorConfig helps maintain consistent coding styles for multiple developers working on the same project across various editors and IDEs.
# https://editorconfig.org/
# VS Code extension: https://marketplace.visualstudio.com/items?itemName=EditorConfig.EditorConfig

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*.{js,vue,jsx,tsx}]
indent_style = space
indent_size = 2
tab_width = 2
